<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TV Scherm Toevoegen</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            transition: background-color 0.5s, color 0.5s;
            margin-bottom: 50px;
        }

        body.dark-mode {
            background-color: #121212;
            color: #ffffff;
        }

        .btn.dark-mode {
            background-color: #292929;
            border-color: #292929;
            color: #ffffff;
            transition: background-color 0.5s, border-color 0.5s, color 0.5s;
        }

        .container {
            max-width: 600px;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo-container img {
            width: 200px; /* Aangepaste grootte zoals op de andere pagina */
            height: auto;
            cursor: pointer;
        }

        .form-card {
            background-color: #f8f9fa; /* Achtergrondkleur van de kaart */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease, background-color 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .form-title {
            text-align: center;
            margin-bottom: 20px;
            margin-top: 20px; /* Extra bovenmarge toegevoegd */
        }

        .hamburger-menu {
            position: fixed;
            top: 20px;
            left: 20px;
            cursor: pointer;
            z-index: 1000;
        }

        .hamburger-menu span {
            display: block;
            width: 30px;
            height: 3px;
            background-color: #333;
            margin: 6px 0;
            transition: 0.4s;
        }

        .hamburger-menu:hover span {
            background-color: #007bff;
        }

        .menu-container {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 0;
            overflow-x: hidden;
            transition: 0.5s;
            background-color: #121212;
            padding-top: 60px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
            z-index: 999;
        }

        .menu-container a {
            padding: 15px;
            text-decoration: none;
            font-size: 20px;
            color: #fff;
            display: block;
            transition: 0.3s;
        }

        .menu-container a:hover {
            background-color: #007bff;
        }

        .menu-container .close-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 30px;
            color: #fff;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .menu-container a {
                font-size: 18px;
            }
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div style="text-align: center; margin-bottom: 20px;">
            <a href="/">
                <img src="https://www.flynth.nl/Portals/0/Flynth_logo.svg?ver=m2f-ZUmJcYKKep2CzZJIDg%3D%3D"
                    alt="Flynth Logo" style="width: 200px; height: auto;">
            </a>
        </div>

        <!-- Hamburger Menu -->
        <div class="hamburger-menu" onclick="toggleMenu()">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <!-- Menu Container -->
        <div class="menu-container">
            <a href="/">Home</a>
            <a href="/tv-beheer">TV beheer</a>
            <a href="/tv-toevoegen">TV toevoegen</a>
            <a href="/tv-kiezen">TV kiezen</a>
            <!-- Voeg hier andere menu-items toe indien nodig -->
            <span class="close-btn" onclick="toggleMenu()">&times;</span>
        </div>

        <h1 class="form-title">TV Scherm Toevoegen</h1>

     <div class="card form-card">
        <form action="/add_tv" method="post" onsubmit="addSuccessMessage()">
        <div class="form-group">
            <label for="merk">Merk:</label>
            <select class="form-control" id="merk" name="merk" required>
                <option value="" disabled selected>Selecteer het merk</option>
                <option value="LG">LG</option>
                <option value="Samsung">Samsung</option>
                <option value="Philips">Philips</option>
            </select>
        </div>
        <div class="form-group">
            <label for="type">Model:</label>
            <input type="text" class="form-control" id="model" name="model" required>
        </div>
        <div class="form-group">
            <label for="barcode">Barcode:</label>
            <input type="text" class="form-control" id="barcode" name="barcode" readonly>
        </div>
        <div class="form-group">
            <label for="serienummer">Serienummer:</label>
            <input type="text" class="form-control" id="serienummer" name="serienummer">
        </div>
        <div class="form-group">
            <label for="schermFormaat">Scherm formaat:</label>
            <select class="form-control" id="schermFormaat" name="schermFormaat" required>
                <option value="" disabled selected>Selecteer het scherm formaat</option>
                <option value="32">32 inch</option>
                <option value="43">43 inch</option>
                <option value="55">55 inch</option>
                <option value="65">65 inch</option>
                <option value="75">75 inch</option>
                <option value="80">80 inch</option>
                <option value="86">86 inch</option>
            </select>
        </div>
        <div class="form-group">
            <label for="herkomst">Herkomst:</label>
            <input type="text" class="form-control" id="herkomst" name="herkomst">
        </div>
        <div class="form-group">
            <label for="staat">Staat:</label>
            <input type="text" class="form-control" id="staat" name="staat" required>
        </div>
        <div class="form-group">
            <label for="beschikbaarheid">Beschikbaarheid:</label>
            <select class="form-control" id="beschikbaarheid" name="beschikbaarheid" required>
                <option value="" disabled selected>Selecteer de beschikbaarheid</option>
                <option value="Ja">Ja</option>
                <option value="Nee">Nee</option>
            </select>
        </div>
        <div class="form-group">
            <label for="opmerkingen">Opmerkingen:</label>
            <input type="text" class="form-control" id="opmerkingen" name="opmerkingen">
        </div>
            <button type="submit" class="btn btn-success">Toevoegen</button>
    </form>
</div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
    <script>
        // Functie om een willekeurig getal van 12 cijfers te genereren
        function generateRandomBarcode() {
            var min = Math.pow(10, 11);
            var max = Math.pow(10, 12) - 1;
            var randomBarcode = Math.floor(Math.random() * (max - min + 1)) + min;
            return randomBarcode.toString();
        }

        // Wanneer het document geladen is
        document.addEventListener("DOMContentLoaded", function () {
            // Selecteer het barcodeveld
            var barcodeField = document.getElementById("barcode");

            // Genereer een willekeurig barcode en vul het veld in
            barcodeField.value = generateRandomBarcode();
        });

        // Toggle Hamburger Menu
        function toggleMenu() {
            $('.menu-container').width() === 0 ? openMenu() : closeMenu();
        }

        // Open Hamburger Menu
        function openMenu() {
            $('.menu-container').width('250px');
        }

        // Close Hamburger Menu
        function closeMenu() {
            $('.menu-container').width(0);
        }

        // Functie om succesmelding toe te voegen
        function addSuccessMessage(event) {
            // Voorkom het standaardgedrag van het formulier
            event.preventDefault();

            // Maak een nieuw div-element aan voor de succesmelding
            var successAlert = document.createElement('div');
            successAlert.className = 'alert alert-success';
            successAlert.setAttribute('role', 'alert');

            // Vul de inhoud van de succesmelding in
            successAlert.innerHTML = `
                <h4 class="alert-heading">Well done!</h4>
                <p>Aww yeah, you successfully read this important alert message. This example text is going to run a bit longer so that you can see how spacing within an alert works with this kind of content.</p>
                <hr>
                <p class="mb-0">Whenever you need to, be sure to use margin utilities to keep things nice and tidy.</p>
            `;

            // Voeg de succesmelding toe aan de body van de pagina (of een andere gewenste locatie)
            document.body.appendChild(successAlert);
        }
    </script>

</body>

</html>
